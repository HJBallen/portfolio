---
import NextIcon from '../icons/NextIcon.astro'
import TailwindIcon from "../icons/TailwindIcon.astro"
import AstroIcon from "../icons/AstroIcon.astro"
import LinkButton from './LinkButton.astro'
import GitHub from '@/icons/GitHub.astro'
import LinkIcon from '@/icons/LinkIcon.astro'

const TAGS = {
  NEXT:{
    name:"next.js",
    class:"bg-black text-white",
    icon: NextIcon
  },
  TAILWIND: {
    name:"TailwindCSS",
    class:"bg-blue-500/40 text-white",
    icon: TailwindIcon,
  },

  ASTRO:{
    name:"Astro",
    class:"bg-black text-white",
    icon: AstroIcon,
  }

}

const PROJECTS = [{
  title:"Project 1",
  description:"Un proyecto hecho con mucho amor para el mundo y para que se calle la boca la rata de tu vecino",
  link:"#",
  github:"#",
  img:"/projects/ecommerce.webp",
  tags:[TAGS.NEXT, TAGS.TAILWIND, TAGS.ASTRO],
},{
  title:"Project 1",
  description:"Un proyecto hecho con mucho amor para el mundo y para que se calle la boca la rata de tu vecino",
  link:"#",
  github:"#",
  img:"/projects/ecommerce.webp",
  tags:[TAGS.NEXT, TAGS.TAILWIND, TAGS.ASTRO],
}]
---
<section class='flex flex-col gap-y-8'>
  {
    PROJECTS.map(({title,description, tags, img, link, github})=>(
    <article class='grid grid-cols-2 gap-x-8 '>
      <div class='hover:scale-105 transform transition-transform duration-300'>
        <img
        src={img}
        alt={`Captura de Pantalla del proyecto ${img}`}
        class='w-auto rounded object-cover m-1 border-[2px] border-gray-800/80'
        />
      </div>
      <div>
        <h3 class='text-2xl font-semibold text-yellow-200/70 mb-2'>
          {title}
        </h3>
        <ul class='flex flex-row gap-x-2 pb-2'>
          {tags.map(tag=>
          (
          <li>
            <span  class={`flex gap-x-2 rounded-full text-xs items-center px-2 py-1 ${tag.class}`}> 
              <tag.icon class='size-4'/>
              {tag.name}
            </span>
          </li>
          ))}
        </ul>
        <p class='text-[15px] mb-4 text-pretty'>{description}</p>
        <footer class="flex items-end justify-end mt-4 gap-x-4">
            {github && (
              <LinkButton href={github}>
                <GitHub class="size-6" />
                Code
                
              </LinkButton>
            )}
            {link && (
              <LinkButton href={link}>
                <LinkIcon class="size-4" />
                Preview
              </LinkButton>
            )}
          </footer>
      </div>
      
    </article>))
  }
</section>